{% extends "BillAndGoBundle::base.html.twig" %}

{% block title %}{{ parent() }} - Paiement{% endblock %}

{% block fos_user_content %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                <span>Paiement</span>
                <small>
                    <span id="doc_number">{{ paiment.amount }}€</span>
                    {% if paiment.refBill|first %} de <i>{{ paiment.refBill|first.refClient.companyName }}</i>{% endif %}
                </small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                <li><a href="{{ path('billandgo_estimate_index') }}"><i class="fa fa-file-text-o"></i> Paiments</a></li>
                <li class="active">{{ paiment.amount }}</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="well">
                <h2>
                    {{ paiment.amount }}€
                </h2>
                <p>{% if paiment.datePaiment %}{{ paiment.datePaiment|date('Y-m-d') }}{% endif %}</p>
                <p>{{ paiment.mode }}</p>
                <p>
                    {% if paiment.refBill|first %}
                        <a href="{{ path('billandgo_document_view', {'id' : paiment.refBill|first.id}) }}">{{ paiment.refBill|first.number }}</a>
                    {% endif %}
                </p>
                <div>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
            </div>
            <div class="text-right">
                <a href="{{ path('billandgo_paiment_index') }}" class="btn btn-info"><i class="fa fa-list"></i> Retour à la liste des paiements</a>
            </div>
        </section>
    </div>

{% endblock %}
