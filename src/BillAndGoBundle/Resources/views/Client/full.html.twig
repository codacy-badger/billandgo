{% extends "BillAndGoBundle::base.html.twig" %}

{% block title %}{{ parent() }} - {{ client.companyName }}{% endblock %}

{% block fos_user_content %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Clients
                <small>{{ client.companyName }}</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                <li><a href="{{ path('billandgo_clients_list') }}"><i class="fa fa-users"></i> Clients</a></li>
                <li class="active">{{ client.companyName }}</li>
            </ol>
        </section>



        <!-- Main content -->
        <section class="content">



            <div class="box box-default collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title">Infos</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <p>{{ client.adress }}</p>
                    <p>{{ client.zipcode }} {{ client.city }}, {{ client.country }}</p>
                    <p class="text-center"><i>/* A venir : informations financières, etc */</i></p>
                </div>
                <!-- /.box-body -->
            </div>
            <div class="box box-default collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title">Agenda</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <p class="grey-text center-align">/* A venir : agenda lié au client */</p>
                </div>
                <!-- /.box-body -->
            </div>
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">Contacts</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Telephone</th>
                            <th>Mobile</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for contact in client.contacts %}
                            <tr>
                                <td>{{ contact.firstname }} {{ contact.lastname }}</td>
                                <td>
                                    <a href="mailto:{{ contact.email }}">@</a>
                                    {{ contact.email }}
                                </td>
                                <td>
                                    <a href="tel:{{ contact.phone }}"><i class="fa fa-phone"></i></a>
                                    {{ contact.phone }}
                                </td>
                                <td>
                                    <a href="tel:{{ contact.mobile }}"><i class="fa fa-mobile-phone"></i></a>
                                    {{ contact.mobile }}
                                </td>
                                <td>
                                    <a href="{{ path('billandgo_client_delete_contact', {'id': client.id, 'contact': contact.id}) }}">
                                        <i class="fa fa-trash text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <p>Pas de contact</p>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addContactModal">
                        Ajouter un contact ?
                    </button>
                    <div class="modal fade" id="addContactModal" tabindex="-1" role="dialog" aria-labelledby="addContactModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="addContactModalLabel">Ajouter un contact</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="well">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                {{ form(form) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box box-default collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title">Projets et documents</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <ul class="nav nav-pills nav-justified">
                        <li class="active">
                            <a data-toggle="tab" href="#estimates">
                                Devis
                            </a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#projects">
                                Projets
                            </a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#bills">
                                Factures
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="estimates" class="tab-pane fade in active bg-info" >
                            <p class="grey-text center-align">/*A venir : tableau des devis envoyés (ou brouillons) au client*/</p>
                        </div>
                        <div id="projects" class="tab-pane fade in bg-info">
                            <p class="grey-text center-align">/*A venir : tableau des projets en cours pour le client*/</p>
                        </div>
                        <div id="bills" class="tab-pane fade in bg-info">
                            <p class="grey-text center-align">/*A venir : tableau des factures envoyées au client, payées ou pas*/</p>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
        </section>
        <!-- /.content -->

        <div class="text-right">
            <a href="{{ path('billandgo_clients_list') }}" class="btn btn-info"><i class="fa fa-list"></i> Retour à la liste des clients</a>
        </div>
    </div>
    <!-- /.content-wrapper -->

{% endblock %}