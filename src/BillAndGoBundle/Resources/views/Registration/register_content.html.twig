    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'id': 'fos_user_registration_register'}}) }}

    <div class="modal-bodies">

        <div class="modal-body modal-body-step-0  {%  if form.vars.valid %}is-showing{% endif %}">
            <div class="title">Commencer dès maintenant votre inscription sur Bill&Go</div>
            <div class="description">Votre inscription se déroulera en une étape afin d'obtenir les informations requises pour votre compte sur Bill&Go. </div>

            <br>
            <div class="text-center">
                <div class="button-start">Commencer mon inscription</div>
            </div>
            <br>
            <div class="text-center row">
                <button  type="button" class="button-old col-md-6" onclick="location.href='{{ path('fos_user_security_login') }}'">J'ai déjà un compte</button>
                <button type="button" class="button-autologin col-md-6" onclick="location.href='/connect/github'"><i class="fa fa-github"></i> Inscription avec Github </button>

            </div>
            <br>
        </div>
        <div class="modal-body modal-body-step-1">
            <div class="title">Informations requises</div>
                {#{ form_row(form.username) }#}
            <div class="row">
                <div class="description col-md-12">Informations nécéssaires à vous identifier</div>
                <div class="col-md-6">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="col-md-6">
            {{ form_row(form.lastname) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="description col-md-12">Renseignez le mot de passe que vous souhaitez</div>

                <div class="col-md-6">
                {{ form_row(form.plainPassword.first) }}
                </div>

                <div class="col-md-6">
                    {{ form_row(form.plainPassword.second) }}
                </div>

            </div>


            <div class="row">
                <div class="description col-md-12">Pour finir, quelques informations sur votre votre métier</div>
                <div class="col-md-6">
                    {{ form_row(form.companyname) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.job_type) }}
                </div>
            </div>



            <div class="g-recaptcha" data-sitekey="6LeadXIUAAAAAH6eWdLVwmF4BUSm2zCK4NuIh8ZR"></div>

            <div class="error-captcha">Veuillez validez le captcha avant de soumettre le formulaire</div>
            <br>
            <div class="text-center fade-in">
                <div class="button button-submit">Terminer mon inscription</div>
            </div>
