{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="callout callout-danger">
        <h4> Identifiant ou mot de passe invalide </h4>
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group has-feedback">
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Identifiant"/>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Mot de passse"/>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <div class="checkbox icheck">
                <label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> <small>Rester connecté</small>
                </label>
            </div>

        </div>
        <!-- /.col -->
        <div class="col-xs-6">
            <input type="submit" id="_submit" name="_submit" value="Connexion" class="btn btn-primary btn-block btn-flat" />
        </div>
    </div>
    <div class="row">
       <hr>
        <div class="col-xs-12 text-center">
            <a href="{{ path('fos_user_resetting_request') }}" class="forgot-pass btn btn-outline"><small>Mot de passe oublié ?</small></a><br>
        </div>
        <!-- /.col -->
    </div>
</form>
