{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
{{ form_errors(form) }}
<div class="form-group" id="client_modal_name">
    {{ form_label(form.companyName, "Nom de l'entreprise", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.companyName) }}
    {{ form_widget(form.companyName, {'attr': {'class': 'form-control'}}) }}
    <div>
        <span class="btn btn-success" id="client_modal_name_ok">Valider</span>
    </div>
</div>
<div class="form-group" id="client_modal_country">
    {{ form_label(form.country, "Pays :", {'label_attr': {'class': 'control-label'}}) }}
    {{ form_errors(form.country) }}
    {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
    <div>
        <span class="btn btn-danger" id="client_modal_name_back">Retour au nom de l'entreprise</span>
        <span class="btn btn-success" id="client_modal_country_ok">Valider</span>
    </div>
</div>
<div class="row" id="client_modal_location">
    <div class="col-sm-12">
        <div class="form-group" id="client_modal_location_adress">
            {{ form_label(form.adress, "Adresse : ", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.adress) }}
            {{ form_widget(form.adress, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group" id="client_modal_location_zipcode">
            {{ form_label(form.zipcode, "Zipcode : ", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.zipcode) }}
            {{ form_widget(form.zipcode, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group" id="client_modal_location_city">
            {{ form_label(form.city, "Ville :", {'label_attr': {'class': 'control-label'}}) }}
            {{ form_errors(form.city) }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="col-md-12">
        <span class="btn btn-danger" id="client_modal_country_back">Retour au pays</span>
        <span class="btn btn-success" id="client_modal_location_ok">Valider</span>
    </div>
</div>

<div class="form-group" id="client_modal_contacts">
    {{ form_row(form.contacts) }}
    <a href="#" id="add_contact" class="btn btn-default">Ajouter un contact</a>
    <div>
        <span class="btn btn-danger" id="client_modal_location_back">Retour Ã  l'adresse</span>
    </div>
</div>
<div class="form-group" id="client_modal_submit">
    {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
