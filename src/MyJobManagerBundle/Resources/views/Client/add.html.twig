                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-offset-2 col-lg-offset-3 col-md-8 col-lg-6 text-center">
                            {{ include("MyJobManagerBundle:Client:form.html.twig") }}
                        </div>
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.box-body -->
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/myjobmanager/js/client.js') }}"></script>
{% endblock %}