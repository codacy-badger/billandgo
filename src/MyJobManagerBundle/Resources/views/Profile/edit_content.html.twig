{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Edition du profil
                <small>
                    <span id="doc_number"></span> {{ user.firstname|capitalize }} {{ user.lastname |upper }} <i></i>
                </small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('myjobmanager_project_list') }}"><i class="fa fa-user"></i> Profil</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            <div class="row">
                {{ form_row(form._token) }}
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary btn-transparent"  style="margin: 10px 0px 10px 0px" onclick="location.href='{{ path('fos_user_profile_show') }}'"><i class="fa fa-arrow-left"></i> &nbsp; Retour à votre profil</button>
                    <input type="submit" value="Mettre à jour le profil" class="btn btn-success" />
                </div>
                <div class="col-md-12">
                    {{ form_errors(form) }}
                </div>
                <div class="col-md-3">

                    <div class="box box-warning ">
                        <div class="box-header with-border">
                            <h3 class="box-title">Informations générales</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <img class="profile-user-img img-responsive img-circle" src="{{ asset('bundles/myjobmanager/img/default_user.png') }}" alt="Photo profil utilisateur">
                            <br>
                                <!-- text input -->
                                <div class="form-group">
                                    <label>Nom </label>
                                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    <label>Prénom</label>
                                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    <label>Nom d'utilisateur</label>
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    <label>Email</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">@</span>
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label>Mobile</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                        <i class="fa fa-mobile"></i>
                                        </span>
                                        {{ form_widget(form.mobile, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label>Téléphone</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                        <i class="fa fa-phone"></i>
                                        </span>
                                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="box box-warning ">
                        <div class="box-header with-border">
                            <h3 class="box-title">Société</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <img class="profile-user-img img-responsive img-thubmail" src="{% if user.getCompanyLogoPath() == null %}{{ asset('bundles/myjobmanager/img/default_building.png') }}{% else %}{{ '/uploads/user/avatar/'~user.getCompanyLogoPath()}} {% endif %}" alt="Photo société">
                            <div class="form-group">
                                <label>Modifier le logo</label>
                                {{ form_widget(form.company_logo, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <br>

                                <div class="form-group">
                                    <label>Nom de la société</label>
                                    {{ form_widget(form.companyname, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <!-- text input -->
                                <div class="form-group">
                                    <label>Siret</label>
                                    {{ form_widget(form.siret, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-group">
                                    <label>Adresse</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                        <i class="fa fa-street"></i>
                                        </span>
                                        {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label>Code postal</label>
                                    {{ form_widget(form.zip_code, {'attr': {'class': 'form-control'}}) }}

                                </div>

                                <div class="form-group">
                                    <label>Ville</label>
                                    {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    <label>Pays</label>
                                    {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                                </div>

                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
                <div class="col-md-3">

                    <div class="box box-warning ">
                        <div class="box-header with-border">
                            <h3 class="box-title">Informations bancaire</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="text-center center-block"><i class="fa fa-credit-card fa-2x text-center"></i></div>
                            <br>

                                <!-- text input -->
                                <div class="form-group">

                                    <label>Banque</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                        <i class="fa fa-info fa fa-university"></i>
                                        </span>
                                        {{ form_widget(form.banque, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label>IBAN</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                        <i class="fa fa fa-italic"></i>
                                        </span>
                                        {{ form_widget(form.iban, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label>BIC</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                        <i class="fa fa-info fa fa-italic"></i>
                                        </span>
                                        {{ form_widget(form.bic, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                </div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>

            </div>
            {{ form_end(form) }}

            <!-- /.col -->
        </section>
    </div>



    <!-- /.content -->
    <!-- /.content-wrapper -->


{% endblock %}

