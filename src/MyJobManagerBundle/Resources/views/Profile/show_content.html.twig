{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Votre Profil
                <small>
                    <span id="doc_number"></span> {{ user.firstname|capitalize }} {{ user.lastname |upper }} <i></i>
                </small>
            </h1>
            <ol class="breadcrumb">
                <li><i class="fa fa-user"></i> Profil</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-3">

                    <!-- Profile Image -->
                    <div class="box box-primary">
                        <div class="box-body box-profile">
                            <img class="profile-user-img img-responsive img-circle" src="{{ asset('bundles/myjobmanager/img/default_user.png') }}" alt="Photo profil utilisateur">

                            <h3 class="profile-username text-center">{{ user.firstname|capitalize }} {{ user.lastname |upper }} </h3>

                            <p class="text-muted text-center">{{user.companyname}}</p>

                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>Nom d'utilisateur</b> <a class="pull-right">{{user.username}}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Email</b> <a class="pull-right">{{user.email}}</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Mobile</b> <a class="pull-right">{{ user.mobile }}</a>
                                </li>
                            </ul>

                            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary btn-block"><b>Modifier votre profil</b></a>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->


                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="box box-primary">
                    <div class="box-body box-profile">
                        <h3 class="profile-username text-center">Votre société</h3>
                        <img class="profile-user-img img-responsive img-thubmail" src="{% if user.getCompanyLogoPath() == null %}{{ asset('bundles/myjobmanager/img/default_building.png') }}{% else %}{{ '/uploads/user/avatar/'~user.getCompanyLogoPath()}} {% endif %}" alt="Photo société">

                        <p class="text-muted text-center"></p>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b><i class="fa fa-building"></i>&nbsp; Nom</b> <a class="pull-right">{{user.companyname}}</a>
                            </li>
                            <li class="list-group-item">
                                <b><i class="fa fa-list-ol"></i>&nbsp; Siret</b> <a class="pull-right">{% if user.siret == null %} Non défini {% else %} {{user.siret }} {% endif %}</a>
                            </li>
                            <li class="list-group-item">
                                <b><i class="fa fa-map-o"></i>&nbsp; Adresse</b> <a class="pull-right">{{user.address}}</a>
                            </li>
                            <li class="list-group-item">
                                <b><i class="fa fa-location-arrow"></i>&nbsp;Code postal</b> <a class="pull-right">{{user.zipcode}}</a>
                            </li>
                            <li class="list-group-item">
                                <b><i class="fa fa-road"></i> &nbsp; Ville</b> <a class="pull-right">{{ user.city }}</a>
                            </li>
                            <li class="list-group-item">
                                <b><i class="fa fa-globe"></i> &nbsp; Pays</b> <a class="pull-right">{{ user.country }}</a>
                            </li>
                        </ul>

                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                </div>

                <div class="col-md-3">
                    <div class="box box-primary">
                        <div class="box-body box-profile">
                            <h3 class="profile-username text-center">Informations compte</h3>
                            <div class="text-center center-block"> <i class="fa fa-user fa-3x text-center"></i></div>
                            <p class="text-muted text-center"></p>

                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b><i class="fa fa-clock-o"></i>&nbsp; Dernière connection</b> <a class="pull-right">{{user.lastlogin|date('d/m/Y à H:i:s')}}</a>
                                </li>
                            </ul>

                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                </div>

                <div class="col-md-9 ">
                    <div class="box box-primary">
                        <div class="box-body box-profile">
                            <h3 class="profile-username text-center">Informations bancaires</h3>
                            <div class="text-center center-block"> <i class="fa fa-credit-card fa-3x text-center"></i></div>
                            <p class="text-muted text-center"></p>
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b><i class="fa fa-university"></i>&nbsp; Banque</b> <a class="pull-right">{% if user.banque == null %} Non défini {% else %} {{user.banque }} {% endif %}</a>
                                </li>
                                <li class="list-group-item">
                                    <b><i class="fa fa-italic"></i>&nbsp; IBAN</b> <a class="pull-right">{% if user.iban == null %} Non défini {% else %} {{user.iban }} {% endif %}</a>
                                </li>
                                <li class="list-group-item">
                                    <b><i class="fa fa-info"></i>&nbsp; BIC</b>  <a class="pull-right">{% if user.bic == null %} Non défini {% else %} {{user.bic }} {% endif %}</a>
                                </li>
                            </ul>

                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                </div>
                <!-- /.col -->
            </div>


        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


{% endblock %}

