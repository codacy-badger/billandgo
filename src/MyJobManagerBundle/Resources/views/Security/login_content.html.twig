{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="callout callout-danger">
        <h4> {{ error.messageKey|trans(error.messageData, 'security') }} </h4>
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group has-feedback">
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="Username"/>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password"/>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <div class="row">
        <div class="col-xs-8">
            <div class="checkbox icheck">
                <label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"class="btn btn-primary btn-block btn-flat" />
        </div>
        <!-- /.col -->
    </div>
</form>
