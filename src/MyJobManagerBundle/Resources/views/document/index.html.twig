            </div>

            <div class="text-center">
                <a href="{{ path('myjobmanager_estimate_add') }}" class="btn btn-success"><i class="fa fa-plus"></i> Ajouter un {{ min_fr }}</a>
            </div>


        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

