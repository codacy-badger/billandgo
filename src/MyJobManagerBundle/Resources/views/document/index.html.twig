        $('#estimateFilterAll').addClass('active');

        $("#estimateFilterSent").click(
            function() {
                $('.estimate-sent').show();
                $('.estimate-accepted').hide();
                $('#estimateFilterSent').addClass('active');
                $('#estimateFilterAccepted').removeClass('active');
                $('#estimateFilterAll').removeClass('active');
            }
        );
        $("#estimateFilterAccepted").click(
            function() {
                $('.estimate-sent').hide();
                $('.estimate-accepted').show();
                $('#estimateFilterAccepted').addClass('active');
                $('#estimateFilterSent').removeClass('active');
                $('#estimateFilterAll').removeClass('active');
            }
        );
        $("#estimateFilterAll").click(
            function() {
                $('.estimate-sent').show();
                $('.estimate-accepted').show();
                $('#estimateFilterAll').addClass('active');
                $('#estimateFilterSent').removeClass('active');
                $('#estimateFilterAccepted').removeClass('active');
            }
        );
    </script>
