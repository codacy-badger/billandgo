                                        <a href="{{ path('myjobmanager_estimate_add') }}">Ajoutez votre premier {{ min_fr }}</a>
                                    </p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- /.box-body -->
            </div>

            {# canceled/refused #}
            <div class="box box-default collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        {{ canceled|length }} devis annulé{% if canceled|length > 1 %}s{% endif %}/refusé{% if canceled|length > 1 %}s{% endif %}
                    </h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            {% if canceled|length > 0 %}<i class="fa fa-plus"></i>{% endif %}
                        </button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        {% for doc in canceled %}
                            <div class="col-md-6 col-lg-4 text-center third-block estimate-block estimate-{{ doc.status }}">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="color-{{ doc.status }}">
                                            <a href="{{ path('myjobmanager_document_view', {'id': doc.id}) }}">
                                                {{ doc.number }}
                                            </a>
                                        </h3>
                                        <h4 class="color-{{ doc.status }}">
                                            pour
                                            <a href="{{ path('myjobmanager_clients_view', {'id': doc.refClient.id}) }}">
                                                {{ doc.refClient.companyName }}
                                            </a>
                                        </h4>
                                    </div>
                                    <div class="panel-body">
                                        <ul class="nav nav-pills nav-justified">
                                            <li class="active">
                                                <a data-toggle="tab" href="#estimate-{{ doc.number }}-stat">
                                                    {{ status_fr[doc.status] }}
                                                </a>
                                            </li>
                                            <li>
                                                <a data-toggle="tab" href="#estimate-{{ doc.number }}-desc">
                                                    Description
                                                </a>
                                            </li>
                                            <li>
                                                <a data-toggle="tab" href="#estimate-{{ doc.number }}-fin">
                                                    {{ doc.HT + doc.VAT }}€ TTC
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content">
                                            <div id="estimate-{{ doc.number }}-stat" class="tab-pane fade in active bg-info">
                                                <div class="row">
                                                    {% if doc.answerDate %}
                                                        <div class="col-sm-6">
                                                            Envoyé le :
                                                            <br/>
                                                            {{ doc.sentDate|date('d-m-Y') }}
                                                        </div>
                                                        <div class="col-sm-6">
                                                            {% if doc.answerDate %}
                                                                {{ status_fr[doc.status] }} le :
                                                                <br/>
                                                                {{ doc.answerDate|date('d-m-Y') }}
                                                            {% else %}
