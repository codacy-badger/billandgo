                                    <div class="panel-body">
                                        <ul class="nav nav-pills nav-justified">
                                            <li class="active">
                                                <a data-toggle="tab" href="#estimate-{{ doc.number }}-stat">
                                                    {{ status_fr[doc.status] }}
                                                </a>
                                            </li>
                                            <li>
                                                <a data-toggle="tab" href="#estimate-{{ doc.number }}-desc">
                                                    Description
                                                </a>
                                            </li>
                                            <li>
                                                <a data-toggle="tab" href="#estimate-{{ doc.number }}-fin">
                                                    {{ doc.HT + doc.VAT }}€ TTC
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content">
                                            <div id="estimate-{{ doc.number }}-stat" class="tab-pane fade in active bg-info">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        Créé le :
                                                        <br/>
                                                        {{ doc.sentDate|date('d-m-Y') }}
                                                    </div>
                                                    <div class="col-sm-6">
                                                        Valide jusqu'au :
                                                        <br/>
                                                        {{ doc.delayDate|date('d-m-Y') }}
                                                    </div>
                                                </div>
                                                <div style="margin:15px;">
                                                    <form action="{{ path("myjobmanager_document_send_email", {"doc_id": doc.id}) }}" method="get">
                                                        <div class="form-group"style="float:left;width:70%;">
                                                            <select dir="rtl" class="form-control" name="contact" style="background-color: #00c0ef;color:#fff;">
                                                                {% for contact in doc.refClient.contacts %}
                                                                    <option value="{{ contact.id }}">{{ contact.email }}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </div>
                                                        <button type="submit" class="btn btn-info" style="float:left;width: 30%;">
                                                            <i class="fa fa-envelope"></i> Envoyer
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                            <div id="estimate-{{ doc.number }}-desc" class="tab-pane fade in bg-info">
                                                <p>
                                                    {{ doc.description|length > 300 ? doc.description|slice(0, 300) ~ '...' : doc.description  }}
                                                </p>
                                            </div>
                                            <div id="estimate-{{ doc.number }}-fin" class="tab-pane fade in bg-info">
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        HT : {{ doc.HT }}€
                                                    </div>
                                                    <div class="col-sm-6">
                                                        HT : {{ doc.HT + doc.VAT }}€
                                                    </div>
                                                </div>
                                                <div>
                                                    {% for line in doc.refLines %}
                                                        <div {% if (line.refProject|first or line.refBill|first) %}class="color-grey"{% endif %} >
                                                            {% if (line.refProject|first or line.refBill|first) %}<em>{% endif %}
                                                                {{ line.name }}
                                                                {% if (line.refProject|first or line.refBill|first) %}</em>{% endif %}
                                                            <span class="badge badge-success">
                                                                {{ (line.refTax.percent + 100) / 100 * (line.price * line.quantity) }}€ TTC
                                                            </span>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="col-sm-12">
                                <div class="callout callout-warning text-center">
                                    <h4> <i class="fa fa-warning"></i> Aucun {{ min_fr }} enregistré <i class="fa fa-warning"></i> </h4>
                                    <p>
                                        Vous n'avez pas encore saisi de {{ min_fr }}, ne perdez pas de temps,
                                        <a href="{{ path('myjobmanager_estimate_add') }}">Ajoutez votre premier {{ min_fr }}</a>
                                    </p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- /.box-body -->
            </div>

            {# transformed #}
            <div class="box box-default collapsed-box">
                <div class="box-header with-border">
                    {% if type == 'estimate' %}
                        <h3 class="box-title">{{ transformed|length }} devis transformé{% if transformed|length > 1 %}s{% endif %}</h3>
                    {% elseif type == 'bill' %}
                        <h3 class="box-title">Vos factures payées</h3>
                    {% endif %}
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            {% if transformed|length > 0 %}<i class="fa fa-plus"></i>{% endif %}
                        </button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        {% for doc in transformed %}
                            <div class="col-md-6 col-lg-4 text-center third-block estimate-block">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="color-{{ doc.status }}">
                                            <a href="{{ path('myjobmanager_document_view', {'id': doc.id}) }}">
                                                {{ doc.number }}
                                            </a>
                                        </h3>
                                        <h4 class="color-{{ doc.status }}">
                                            pour
                                            <a href="{{ path('myjobmanager_clients_view', {'id': doc.refClient.id}) }}">
                                                {{ doc.refClient.companyName }}
                                            </a>
                                        </h4>
                                    </div>
                                    <div class="panel-body">
                                        <ul class="nav nav-pills nav-justified">
                                            <li class="active">
                                                <a data-toggle="tab" href="#estimate-{{ doc.number }}-stat">
                                                    {{ status_fr[doc.status] }}
                                                </a>
                                            </li>
                                            <li>
                                                <a data-toggle="tab" href="#estimate-{{ doc.number }}-desc">
                                                    Description
                                                </a>
                                            </li>
                                            <li>
                                                <a data-toggle="tab" href="#estimate-{{ doc.number }}-fin">
                                                    {{ doc.HT + doc.VAT }}€ TTC
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content">
                                            <div id="estimate-{{ doc.number }}-stat" class="tab-pane fade in active bg-info">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        Envoyé le :
                                                        <br/>
                                                        {{ doc.sentDate|date('d-m-Y') }}
                                                    </div>
                                                    <div class="col-sm-6">
                                                        {% if doc.answerDate %}
                                                            {{ status_fr[doc.status] }} le :
                                                            <br/>
                                                            {{ doc.answerDate|date('d-m-Y') }}
                                                        {% else %}
                                                            Valide jusqu'au :
                                                            <br/>
                                                            {{ doc.delayDate|date('d-m-Y') }}
                                                        {%  endif %}
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="estimate-{{ doc.number }}-desc" class="tab-pane fade in bg-info">
                                                <p>
                                                    {{ doc.description|length > 300 ? doc.description|slice(0, 300) ~ '...' : doc.description  }}
                                                </p>
                                            </div>
                                            <div id="estimate-{{ doc.number }}-fin" class="tab-pane fade in bg-info">
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        HT : {{ doc.HT }}€
                                                    </div>
                                                    <div class="col-sm-6">
                                                        HT : {{ doc.HT + doc.VAT }}€
                                                    </div>
                                                </div>
                                                <div>
                                                    {% for line in doc.refLines %}
                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                {{ line.name }}
                                                                <span class="badge badge-success">
                                                                    {{ (line.refTax.percent + 100) / 100 * (line.price * line.quantity) }}€ TTC
                                                                </span>
                                                            </div>
                                                            <div class="col-md-4 col-sm-6">
                                                                {% if line.refProject|first %}
                                                                    <a class="btn btn-info" href="{{ path("myjobmanager_project_view", {"id":line.refProject|first.id}) }}">
                                                                        {{ line.refProject|first.name }}
                                                                    </a>
                                                                {% endif %}
                                                            </div>
                                                            <div class="col-md-4 col-sm-6">
                                                                {% if line.refBill|first %}
                                                                    <a class="btn btn-info" href="{{ path("myjobmanager_document_view", {"id":line.refBill|first.id}) }}">
